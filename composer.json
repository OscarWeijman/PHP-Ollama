{
    "name": "oscarweijman/php-ollama",
    "description": "Een moderne PHP library voor het werken met Ollama API, vanaf PHP 8.2",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "OscarWeijman\\PhpOllama\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Oscar Weijman",
            "email": "opweijman@yahoo.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "mockery/mockery": "^1.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
